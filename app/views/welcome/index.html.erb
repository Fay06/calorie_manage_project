  <style>
      * {
          margin: 0;
          padding: 0;
          list-style: none;
          text-decoration: none;
      }

      @font-face {
          font-family: 'iconfont';  /* Project id 3741053 */
          src: url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.woff2?t=1667235492068') format('woff2'),
          url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.woff?t=1667235492068') format('woff'),
          url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.ttf?t=1667235492068') format('truetype');
      }

      .iconfont {
          font-family: "iconfont" !important;
          font-size: 16px;
          font-style: normal;
          -webkit-font-smoothing: antialiased;
          -webkit-text-stroke-width: 0.2px;
          -moz-osx-font-smoothing: grayscale;
      }

      .dashboard {
          background-color: white;
          float: left;
          width: 20%;
          height: 100%;
          border-radius: 0 18px 18px 0px;
          /* position: relative; */

      }

      .content {
          /*background-color:rgb(244, 243, 249);*/
          /*background-color: rgb(244, 243, 249);*/
          float: left;
          width: 80%;
          height: 100%;
          /*position: absolute;*/
          /*right: -20px;*/
          /*top: 30px;*/

      }

      body {
          background-color: rgb(244, 243, 249);
      }

      .information-aa {
          background-color: white;
          width: 45%;
          margin-left: 5%;
      }

      .weight {
          background-color: white;
          width: 50%;
          /*margin-top: 70px;*/
          padding-left: 80px;
          position: relative;
      }

      .pic {
          background-image: url(/assets/tu.png);
          background-size: 80%;
          background-repeat: no-repeat;
          height: 240px;
          width: 300px;
          margin-left: 189px;
          margin-top: 70px;
      }

      .ww {
          background-color: white;
          height: 255px;
          margin-left: 37px;
          border-radius: 10px;
      }

      .a-dashboard {
          color: rgb(76, 74, 237);
          font-size: 18px;
          font-weight: 600;
          background-color: rgb(227, 225, 255);
          width: 250px;
          height: 45px;
          border: rgb(227, 225, 255) 1px solid;
          border-radius: 8px;
      }

      .b-dashboard {
          color: rgb(133, 135, 136);
          font-size: 18px;
          font-weight: 600;
          background-color: white;
          width: 250px;
          height: 45px;
          border: rgb(248, 247, 249) 1px solid;
          border-radius: 8px;
          margin-top: 130%;
      }

      .information-aa button {
          color: rgb(76, 74, 237);
          font-size: 18px;
          font-weight: 600;
          background-color: white;
          width: 350px;
          height: 45px;
          border: rgb(149, 143, 225) 1px solid;
          border-radius: 20px;
      }

      .ww p {
          margin: 15px 15px;
          color: rgb(159, 162, 164);

      }

      .ww h1 {
          text-align: center;
          margin-top: 80px;
