<div class="container" name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <div class="dashboard">
    <p style="margin:85px 12px; font-size: 30px">Calorie<span style="color:rgb(61, 50, 214); ">Manager</span></p>
    <button class="a-dashboard" style="margin:10px 3px;"><i class="iconfont">&#xe653;</i>Dashboard</button>
    <button class="b-dashboard">
      <span style="margin-right:15px;"> ‚Üê </span><%= link_to "Log Out", session_path(session[:user_uid]), method: 'delete', class: 'text-secondary' %>
    </button>
  </div>

  <div class="content">
    <div class="container">
      <div class="row">
        <div class="information-aa">
          <div class="row">
            <p style="font-size:50px; font-weight:800;margin-top: 65px;  ">Hi,<%= User.find(session[:user_uid]).first_name %></p>
          </div>
          <div class="row">
            <div class="col-md-6">
              <p style="font-size:20px; font-weight:800; margin-top:40px ; color: rgb(100, 204, 155); ">-2.25kg</p>
              <p style="font-size:15px; font-weight:500; margin-bottom: 40px; color: rgb(136, 140, 139); ">This Week</p>
            </div>
            <div class="col-md-6" style="margin-top: 35px">
              Need to burn <br>
              <span class="text-danger">300</span> <br>
              Calories Today
            </div>
          </div>
          <div class="row">
            <button style="margin-bottom: 35px">KEEP GOING!</button>
          </div>
        </div>

        <div class="weight">
          <span style="margin: 140px 0 0 290px; font-size:40px;color:white"><%= User.find(session[:user_uid]).weight %></span>
          <div class="pic"></div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="age ww">
            <p>Age</p>
            <h1><%= User.find(session[:user_uid]).age %></h1>
          </div>
        </div>
        <div class="col">
          <div class="age ww">
            <p>Sex</p>
            <h1><%= User.find(session[:user_uid]).sex %></h1>
          </div>
        </div>
