<!--register page-->

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <style>
      *{
          margin: 0;
          padding: 0;
          list-style: none;
          text-decoration: none;
      }
      @font-face {
          font-family: 'iconfont';  /* Project id 3741053 */
          src: url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.woff2?t=1667235492068') format('woff2'),
          url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.woff?t=1667235492068') format('woff'),
          url('//at.alicdn.com/t/c/font_3741053_lf4z8drci5c.ttf?t=1667235492068') format('truetype');
      }
      .iconfont{
          font-family:"iconfont" !important;
          font-size:16px;font-style:normal;
          -webkit-font-smoothing: antialiased;
          -webkit-text-stroke-width: 0.2px;
          -moz-osx-font-smoothing: grayscale;}
      body {
          position: relative;
          /* background-color: rgb(249, 250, 255); */
          /* background-color: white; */
          background-image: url(/assets/pic.jpg);
          background-repeat: no-repeat;
          background-size: 580px;
          background-position: bottom 0 right 0 ;
          color: rgb(64, 77, 85);
      }
      .box {
          background-color: white;
          height: calc(100vh - 100px);
          /* width: 700px; */
          padding-left:80px ;
          margin-top: 20px;
      }
      input {
          height: 35px;
          width: 350px;
          border: rgb(215, 216, 217) 1.5px solid;
          margin:8px 0px 30px 0px;
          outline-color: rgb(169, 176, 181);
          color: rgb(64, 77, 85); ;
      }
      ::placeholder{
          color: rgb(212, 213, 215);

      }
      .bigtitle {
          font-size: 55px;
          font-weight: 800;
          border-bottom:2px dashed rgb(215, 216, 217);
          margin-top: 25px;
      }

      #button {
          color: white;
          font-size: 18px;
          background-color: rgb(69, 67, 226);
          width: 120px;
          height: 45px;
          border: rgb(69, 67, 226) 1px solid;
          float:right;
          display: inline

      }
      .aimg img{
          position: absolute;
          /* height: 650px; */
          width: 550px;
          bottom:0px;
          right: 10px;
      }
      .navlist li{
          color: rgb(64, 77, 85);
          float: left;
          height: 100%;
          line-height:35px;
          text-align: center;
          font-size: 18px;

      }
      .navlist a{
          color: black;
          display: block;
      }
      .navlist a:hover{
          color:rgb(76, 74, 237);
          /* background-color:rgb(244, 243, 249) ; */
      }
      .member{
          height: 40px;
          /* background-color: aqua; */
      }
      .member a{
          color:rgb(69, 67, 226) ;
      }
      .member a:hover{
          color: rgb(60, 61, 61);
      }
  </style>
</head>

<body>
  <div class="box" style="width:800px ;">

    <div class="bigtitle">
      <span  style="margin-bottom: -4px">Register <br></span>
      <span >information</span>
    </div>

  <!--  <form action="">-->
    <%=form_for @user, url: users_path, method: :post do |f| %>

      <div style="height: 250px;  border-bottom:2px dashed rgb(215, 216, 217);">
        <!-- <form action=""> -->
        <div style="float: left; display: inline; margin-top: 20px;">
          <div>
            <span class="input-box">Fist name <a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
            <%= text_field :user, :first_name %>
          </div>
          <div>
            <span class="input-box">Username <a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
            <%= text_field :user, :username %>
          </div>
        </div>

        <div style=" float: right; display: inline; margin-top: 20px;">
          <div>
            <span class="input-box">Last name <a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
            <%= text_field :user, :last_name %>
          </div>

          <div>
            <span class="input-box">Email <a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
            <%= text_field :user, :email %>
          </div>
        </div>
      </div>

      <div style="height:120px; padding-top: 30px; border-bottom:2px dashed rgb(215, 216, 217);">
        <div style="float: left;">
          <span class="input-box">Password <a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
  <!--        <input type="text">-->
          <%= text_field :user, :password %>
        </div>
        <div style="float: right; ">
          <span class="input-box">Confirm password<a href=""><img src="/assets/wenhao.png" alt="" height="18px" style="float:right;"></a></span><br>
  <!--        <input type="text">-->
          <%= text_field :confirmPW, :confirmPW %>
        </div>
      </div>

      <div style="height:20px; margin-top: 100px;" >
  <!--      <button>register</button>-->
        <%#= f.submit "register", class: "btn btn-primary", id: "button" %>
        <%= f.submit "register", id: "button" %>
      </div>

  <!--  </form>-->
    <% end -%>
  </div>

</body>